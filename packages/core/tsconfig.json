{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "strict": false,
    "noUnusedLocals": true,
    "isolatedModules": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "allowJs": true,
    "composite": true,
    "lib": [
      "ESNext"
    ]
  },
  "exclude": [
    "**/*.test.*"
  ],
  "ts-node": {
    "esm": true
  },
  "references": [
    {"path": "../http"},
    {"path": "../ar"},
    {"path": "../cloud"},
    {"path": "../extends"},
    {"path": "../utils"},
    {"path": "../debian"},
    {"path": "../docker"},
  ]
}